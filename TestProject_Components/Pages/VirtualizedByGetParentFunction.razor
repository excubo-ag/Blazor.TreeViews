@page "/virtualized_get_parent"
<SourceCodeLink Repository="Blazor.TreeViews" Page="@nameof(VirtualizedByGetParentFunction)" />

<TreeView Items="Items" GetParent="GetParent" Virtualize/>


@code {
    private List<string> SelectedValues = new List<string>
    {
        "3.1.1"
    };
    private List<string> Items = Enumerable.Range(1, 10000).Select(i => "1." + i).Concat(new List<string>
    {
        "1",
        "1.1",
        "1.2",
        "2",
        "3",
        "3.1",
        "3.1.1",
        "3.1.2"
    }).ToList();
    private string GetParent(string item)
    {
        var last_period = item.LastIndexOf('.');
        if (last_period < 0)
        {
            return null; // no parent
        }
        else
        {
            return item.Substring(0, last_period);
        }
    }
}